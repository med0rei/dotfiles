[alias]
  a        = add
  as       = !git add -A
  as       = !git add -A && git status
  au       = !git add -u
  aus      = !git add -u && git status
  br       = branch
  brd      = branch -d
  cl       = clone
  clb      = clone -b
  cm       = commit
  cmm      = commit -m
  del      = reset --soft HEAD^
  diffnpst = !git --no-pager diff --staged
  ev       = !git add -A && git commit -m "wip" && git push origin HEAD
  ic       = !git commit --allow-empty -m "Initial commit"
  lognp    = !git --no-pager log
  s        = status
  sh       = stash
  ps       = push
  pso      = push origin
  psoh     = push origin HEAD
  pl       = pull
  plo      = pull origin
  ploh     = pull origin HEAD
  plus     = pull upstream
  si       = switch
  sic      = switch -c
  sim      = switch main
  sid      = switch develop
  us       = reset HEAD

