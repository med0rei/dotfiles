{
  "title": "Double tap Shift to toggle input source",
  "rules": [
    {
      "description": "Double tap Shift (alone) -> Control+Space (switch input source)",
      "manipulators": [
        {
          "type": "basic",
          "from": { "key_code": "left_shift", "modifiers": { "optional": ["any"] } },
          "to": [{ "key_code": "left_shift" }],
          "to_if_alone": [
            { "set_variable": { "name": "shift_x2_expiration", "value": 0 } },
            { "key_code": "japanese_eisuu", "repeat": false }
          ],
          "conditions": [
            { "type": "expression_if", "expression": "shift_x2_expiration > system.now.milliseconds" }
          ],
          "parameters": { "basic.to_if_alone_timeout_milliseconds": 250 }
        },
        {
          "type": "basic",
          "from": { "key_code": "left_shift", "modifiers": { "optional": ["any"] } },
          "to": [{ "key_code": "left_shift" }],
          "to_if_alone": [
            {
              "set_variable": {
                "name": "shift_x2_expiration",
                "expression": "system.now.milliseconds + 300"
              }
            }
          ],
          "parameters": { "basic.to_if_alone_timeout_milliseconds": 250 }
        },

        {
          "type": "basic",
          "from": { "key_code": "right_shift", "modifiers": { "optional": ["any"] } },
          "to": [{ "key_code": "right_shift" }],
          "to_if_alone": [
            { "set_variable": { "name": "shift_x2_expiration", "value": 0 } },
            { "key_code": "spacebar", "modifiers": ["left_control"], "repeat": false }
          ],
          "conditions": [
            { "type": "expression_if", "expression": "shift_x2_expiration > system.now.milliseconds" }
          ],
          "parameters": { "basic.to_if_alone_timeout_milliseconds": 250 }
        },
        {
          "type": "basic",
          "from": { "key_code": "right_shift", "modifiers": { "optional": ["any"] } },
          "to": [{ "key_code": "right_shift" }],
          "to_if_alone": [
            {
              "set_variable": {
                "name": "shift_x2_expiration",
                "expression": "system.now.milliseconds + 300"
              }
            }
          ],
          "parameters": { "basic.to_if_alone_timeout_milliseconds": 250 }
        }
      ]
    }
  ]
}
