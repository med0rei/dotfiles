{
  "permissions": {
    "allow": [
      "Bash(cd)",
      "Bash(git diff)",
      "Bash(ls)",
      "Bash(sed)",
      "Bash(pnpm test)",
      "Bash(pnpm build)",
      "Read(./.env.example)"
    ],
    "deny": [
      "Bash(rm)",
      "Read(./.env)",
      "Read(./.env.*)",
      "Read(./**/.env)",
      "Read(./**/.env.*)"
    ]
  },
  "hooks": {
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "terminal-notifier -title \"Claude Code\" -message \"Task finished\""
          }
        ]
      }
    ]
  },
  "enabledPlugins": {
    "frontend-design@claude-code-plugins": true,
    "typescript-lsp@claude-plugins-official": true
  }
}
